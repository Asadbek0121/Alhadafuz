generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String         @id @default(cuid())
  name                 String?
  email                String?        @unique
  username             String?        @unique
  phone                String?        @unique
  password             String?
  hashedPassword       String?
  image                String?
  role                 String         @default("USER")
  provider             String?        @default("credentials")
  uniqueId             String?        @unique
  notificationsEnabled Boolean        @default(true)
  twoFactorEnabled     Boolean        @default(false)
  isDarkMode           Boolean        @default(false)
  isDeleted            Boolean        @default(false)
  emailVerified        DateTime?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  dateOfBirth          DateTime?
  gender               String?
  isVerified           Boolean        @default(false)
  riskScore            Int            @default(0)
  failedAttempts       Int            @default(0)
  lockedUntil          DateTime?
  pinHash              String?        // Argon2 encrypted PIN
  recoveryHash         String?        // Argon2 encrypted recovery key
  telegramId           String?        @unique
  botState             String?        // For telegram bot registration steps
  tempData             String?        @db.Text // JSON for temp data in registration
  lastLoginAt          DateTime?
  lastIp               String?
  accounts             Account[]
  logs                 ActivityLog[]
  addresses            Address[]
  cart                 Cart?
  receivedMessages     Message[]      @relation("ReceivedMessages")
  sentMessages         Message[]      @relation("SentMessages")
  notifications        Notification[]
  orders               Order[]
  reviews              Review[]
  products             Product[]      @relation("VendorProducts")
  sessions             Session[]
  devices              Device[]
  wishlist             Wishlist?
  telegramLoginTokens  TelegramLoginToken[]
  authenticators       Authenticator[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model TelegramLoginToken {
  token     String   @id
  status    String   @default("PENDING") // PENDING, VERIFIED, EXPIRED
  userId    String? 
  user      User?    @relation(fields: [userId], references: [id])
  telegramId String?
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deviceId     String?  // Linked device if applicable
  device       Device?  @relation(fields: [deviceId], references: [id])
  ipAddress    String?
  userAgent    String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Device {
  id           String   @id @default(cuid())
  userId       String
  deviceId     String   @unique // Browser fingerprint or App ID
  deviceName   String
  isTrusted    Boolean  @default(false)
  lastSeen     DateTime @updatedAt
  riskScore    Int      @default(0)
  fingerprint  String?  // Hardware-based unique hash
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions     Session[]

  @@index([userId])
}

model Authenticator {
  id                   String   @id @default(cuid())
  credentialID         String   @unique
  credentialPublicKey  Bytes
  counter              BigInt
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt            DateTime @default(now())

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Address {
  id        String  @id @default(cuid())
  userId    String
  title     String
  city      String
  district  String?
  street    String
  house     String?
  apartment String?
  isDefault Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Order {
  id               String      @id @default(cuid())
  userId           String
  status           String      @default("PENDING")
  total            Float
  deliveryFee      Float       @default(0)
  paymentMethod    String      @default("CASH")
  deliveryMethod   String      @default("COURIER")
  paymentStatus    String      @default("PENDING") // NEW, PAID, CANCELLED
  paymentProvider  String?     // CLICK, PAYME
  paymentId        String?     // Transaction ID from Click/Payme
  shippingCity     String?
  shippingDistrict String?
  shippingAddress  String?
  shippingPhone    String?
  shippingName     String?
  comment          String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  deliveryToken    String?     @unique
  districtCode     String?
  gpsLogs          String?
  creatorId        String?     // Admin ID if created by admin
  couponCode       String?
  discountAmount   Float?      @default(0)
  createdVia       String      @default("WEB_APP") // WEB_APP, ADMIN_PANEL, TELEGRAM_BOT
  user             User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items            OrderItem[]
  storeId          String?
  store            Store?      @relation(fields: [storeId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([paymentStatus])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  vendorId  String? // Store vendor at time of purchase
  title     String
  price     Float
  quantity  Int
  image     String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
  @@index([vendorId])
}

model Product {
  id            String         @id @default(cuid())
  vendorId      String?        // Vendor owner
  vendor        User?          @relation("VendorProducts", fields: [vendorId], references: [id])
  title         String
  description   String
  price         Float
  oldPrice      Float?
  discount      Float?
  discountType  String?        // SALE, PROMO, HOT, etc.
  image         String
  images        String?
  stock         Int            @default(0)
  attributes    String?
  specs         String?
  rating        Float          @default(0)
  reviewsCount  Int            @default(0)
  category      String
  isDeleted     Boolean        @default(false)
  status        String         @default("ACTIVE")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  categoryId    String? // @deprecated
  mxikCode      String?
  packageCode   String?
  vatPercent    Int            @default(0)
  brand         String?
  cartItems     CartItem[]
  orderItems    OrderItem[]
  categoryRel   Category?      @relation("ProductCategoryOld", fields: [categoryId], references: [id])
  categories    Category[]     @relation("ProductToCategory")
  reviews       Review[]
  wishlistItems WishlistItem[]
  banners       Banner[]

  @@index([title])
  @@index([category])
  @@index([price])
  @@index([createdAt])
  @@index([status])
}

model Category {
  id        String     @id @default(cuid())
  name      String
  slug      String     @unique
  image     String?
  order     Int        @default(0)
  isActive  Boolean    @default(true)
  parentId  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  parent    Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryHierarchy")
  products  Product[]  @relation("ProductToCategory")
  banners         Banner[]   @relation("BannerToCategory")
  bannersAsTarget Banner[]   @relation("BannerTargetCategory")
  productsOld     Product[]  @relation("ProductCategoryOld")
}

enum BannerPosition {
  HOME_TOP      // Main Slider (Chap qism)
  HOME_SIDE     // Side Promo (O'ng qism)
  SIDEBAR
  CATEGORY_TOP
  FOOTER
}

model Banner {
  id              String         @id @default(cuid())
  title           String
  description     String?        // For Slider/Promo text
  image           String
  link            String?
  position        BannerPosition @default(HOME_TOP)
  isActive        Boolean        @default(true)
  order           Int            @default(0)
  
  // Promotion specific
  price           Float?
  oldPrice        Float?
  discount        String?        // e.g. "-34%"
  
  // Analytics
  clickCount      Int            @default(0)
  impressionCount Int            @default(0)
  
  // Scheduling
  startDate       DateTime?
  endDate         DateTime?
  
  // A/B Testing
  variant         String?        // A, B, C, etc.

  // Link to internal content
  productId       String?
  product         Product?       @relation(fields: [productId], references: [id])
  targetCategoryId String?
  targetCategory  Category?      @relation("BannerTargetCategory", fields: [targetCategoryId], references: [id])
  
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  categories      Category[]     @relation("BannerToCategory")
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  status    String   @default("PENDING")
  userId    String
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  adminReply String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StoreSettings {
  id               String   @id @default("default")
  siteName         String   @default("UzMarket")
  phone            String?
  email            String?
  address          String?
  socialLinks      String?
  telegramBotToken String?
  telegramAdminIds String?
  updatedAt        DateTime @updatedAt
}

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String   // LOGIN, FAILED_LOGIN, PIN_CHANGE, LOGOUT, RECOVERY_START, DEVICE_TRUSTED
  details    String?  // JSON string for additional info
  ip         String?
  location   String?  // City, Country via API
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
}

model CartItem {
  id        String  @id @default(cuid())
  cartId    String
  productId String
  quantity  Int
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([cartId, productId])
}

model Wishlist {
  id        String         @id @default(cuid())
  userId    String         @unique
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     WishlistItem[]
}

model WishlistItem {
  id         String   @id @default(cuid())
  wishlistId String
  productId  String
  createdAt  DateTime @default(now())
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  @@unique([wishlistId, productId])
}


model Message {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  isRead     Boolean  @default(false)
  type       String   @default("TEXT")
  senderId   String
  receiverId String
  source     String   @default("WEB")
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String?
  title     String
  message   String
  type      String   @default("SYSTEM")
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Store {
  id           String   @id @default(cuid())
  name         String
  address      String
  phone        String?
  workingHours String?
  lat          Float?
  lng          Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  orders       Order[]
}



model PaymentMethod {
  id          String   @id @default(cuid())
  name        String
  type        String   @default("MERCHANT") // MERCHANT, CARD, CASH
  provider    String   // CLICK, PAYME, CASH_ON_DELIVERY (Not unique anymore)
  details     String?  // Extra info (public)
  config      String?  // Secret config (service_id etc, encrypted preferably, but here simple)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PaymentLog {
  id           String   @id @default(cuid())
  provider     String
  transactionId String?
  amount       Float?
  status       String   // REQUEST_RECEIVED, SIGNATURE_FAILED, SUCCESS, ERROR
  requestData  String?  @db.Text // Store raw JSON/Form data
  responseData String?  @db.Text
  ipAddress    String?
  createdAt    DateTime @default(now())
}

model ShippingZone {
  id                String   @id @default(cuid())
  name              String   // Region name (Viloyat)
  district          String?  // Optional District name (Tuman)
  price             Float    @default(0)
  freeFrom          Float?   // Free shipping if total > this
  freeFromQty       Int?     // Free if item count > this
  freeIfHasDiscount Boolean  @default(false) // Free if any product has discount
  freeDiscountType  String   @default("ANY") // ANY, SALE, PROMO, etc.
  isActive          Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Coupon {
  id            String   @id @default(cuid())
  code          String   @unique
  discountType  String   // PERCENTAGE, FIXED
  discountValue Float
  minAmount     Float    @default(0)
  startDate     DateTime @default(now())
  expiryDate    DateTime
  usageLimit    Int      @default(1)
  usedCount     Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
